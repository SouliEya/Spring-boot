# Banking Agent Application - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Application Configuration
# ============================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=banking_db
DB_USERNAME=root
DB_PASSWORD=root
DB_DRIVER=com.mysql.cj.jdbc.Driver

# ============================================
# Hibernate Configuration
# ============================================
HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect
HIBERNATE_DDL_AUTO=update
HIBERNATE_SHOW_SQL=false
HIBERNATE_FORMAT_SQL=true

# ============================================
# Security Configuration
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRATION=86400000

# ============================================
# Logging Configuration
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SECURITY=DEBUG
LOGGING_FILE_PATH=/var/log/banking-app
LOGGING_FILE_MAX_SIZE=10MB
LOGGING_FILE_MAX_HISTORY=30

# ============================================
# Email Configuration (Optional)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@bankingapp.com
MAIL_ENABLED=false

# ============================================
# File Upload Configuration (Optional)
# ============================================
FILE_UPLOAD_DIR=/var/uploads
FILE_MAX_SIZE=10485760
FILE_ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx

# ============================================
# Cache Configuration
# ============================================
CACHE_TYPE=simple
CACHE_ENABLED=true

# ============================================
# Actuator Configuration
# ============================================
MANAGEMENT_ENDPOINTS_EXPOSURE=health,metrics,prometheus
MANAGEMENT_HEALTH_SHOW_DETAILS=when-authorized

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ============================================
# API Rate Limiting (Optional)
# ============================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# External Services (Optional)
# ============================================
PAYMENT_GATEWAY_API_KEY=your_api_key_here
PAYMENT_GATEWAY_API_URL=https://api.payment-gateway.com
SMS_PROVIDER_API_KEY=your_sms_api_key
SMS_PROVIDER_API_URL=https://api.sms-provider.com

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
DATADOG_API_KEY=your_datadog_api_key
NEWRELIC_LICENSE_KEY=your_newrelic_license_key

# ============================================
# AWS Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# ============================================
# Docker Configuration (Optional)
# ============================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=banking-agent-app
DOCKER_IMAGE_TAG=latest
